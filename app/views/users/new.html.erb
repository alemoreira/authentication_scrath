<div id="container">
  <div class="panel panel-primary" style="width: 600px;">
    <div class="panel-heading">Sign Up</div>
    <div class="panel-body">
      <%= form_for @user, html: {hole:'form', class:'form-horizontal'} do |f| %>
          <% if @user.errors.any? %>
              <div class="error_messages">
                <h2>Form is invalid</h2>
                <ul>
                  <% for message in @user.errors.full_messages %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label :email, class:'control-label col-sm-2' %>
            <div class="col-sm-10">
              <div class="input-group">
                <span class="input-group-addon">@</span>
                <%= f.text_field :email, class: 'form-control input-sm', placeholder:'email' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class:'control-label col-sm-2' %>
            <div class="col-sm-10">
              <div class="input-group">
                <span class="input-group-addon glyphicon glyphicon-lock"></span>
                <%= f.password_field :password, class: 'form-control input-sm', placeholder:'Senha' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class:'control-label col-sm-2' %>
            <div class="col-sm-10">
              <div class="input-group">
                <span class="input-group-addon glyphicon glyphicon-lock"></span>
                <%= f.password_field :password_confirmation, class: 'form-control input-sm', placeholder:'Confirme senha' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-3">
                <%= f.submit nil, class:'btn btn-primary' %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
