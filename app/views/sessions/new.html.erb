<div id="container">
    <div class="panel panel-primary" style="width: 600px;">
        <div class="panel-heading">Log in</div>
            <div class="panel-body">
            <%= form_tag sessions_path, hole:'form', class:'form-horizontal' do %>
                <div class="form-group">
                  <%= label_tag :email, nil, class:'control-label col-sm-2' %>
                  <div class="col-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon">@</span>
                      <%= text_field_tag :email, params[:email], class: 'form-control input-sm', placeholder:'email' %>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <%= label_tag :password, nil, class:'control-label col-sm-2' %>
                  <div class="col-sm-4">
                    <div class="input-group">
                      <span class="input-group-addon glyphicon glyphicon-lock"></span>
                      <%= password_field_tag :password, nil, class: 'form-control input-sm', placeholder:'senha' %>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-3">
                    <%= submit_tag nil, class:'btn btn-primary' %>
                  </div>
                </div>
            <% end %>
        </div>
    </div>
</div>